<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/view_padding">

                <ImageView
                    android:id="@+id/img_state"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginHorizontal="@dimen/view_padding"
                    android:background="?selectableItemBackgroundBorderless"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/ic_state_running_anim" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/control_margin"
                        android:text="@string/state_loading"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                    <TextView
                        android:id="@+id/txt_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/nav_recruit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/view_padding">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/control_margin"
                        android:background="@drawable/bg_oval"
                        android:backgroundTint="@color/color_headhunt"
                        android:contentDescription="@null"
                        android:padding="@dimen/control_padding"
                        android:src="@drawable/ic_recruit"
                        android:theme="@style/ThemeOverlay.MaterialComponents.Dark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_recruit" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_settings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/view_padding">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/control_margin"
                        android:background="@drawable/bg_oval"
                        android:backgroundTint="@color/color_material"
                        android:contentDescription="@null"
                        android:padding="@dimen/control_padding"
                        android:src="@drawable/ic_settings"
                        android:theme="@style/ThemeOverlay.MaterialComponents.Dark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_settings" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_about"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/view_padding">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/control_margin"
                        android:background="@drawable/bg_oval"
                        android:backgroundTint="@color/color_recruit"
                        android:contentDescription="@null"
                        android:padding="@dimen/control_padding"
                        android:src="@drawable/ic_info"
                        android:theme="@style/ThemeOverlay.MaterialComponents.Dark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_about" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/action_wiki"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/control_margin"
                android:layout_marginEnd="@dimen/control_margin"
                android:layout_weight="1"
                android:text="@string/action_wiki"
                android:textColor="?android:textColorPrimary" />

            <Button
                android:id="@+id/action_penguin"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/control_margin"
                android:layout_marginStart="@dimen/control_margin"
                android:layout_weight="1"
                android:text="@string/action_penguin"
                android:textColor="?android:textColorPrimary" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"
            android:gravity="center_horizontal"
            android:padding="@dimen/control_margin"
            android:text="@string/coming_soon"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:drawableStartCompat="@drawable/ic_lightbulb" />
    </LinearLayout>
</ScrollView>